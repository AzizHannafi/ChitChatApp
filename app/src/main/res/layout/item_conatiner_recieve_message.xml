<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_4sdp">
<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/imgv_profile"
    android:layout_width="@dimen/_25sdp"
    android:layout_height="@dimen/_25sdp"
    android:background="@drawable/background_image_profil"
    android:scaleType="centerCrop"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/txtv_message"
    app:riv_oval="true"/>
    <TextView
        android:id="@+id/txtv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/background_receive_message"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintWidth_max="wrap"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@id/imgv_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"/>
    <TextView

        android:id="@+id/txtv_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/blue_signal"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="@id/txtv_message"
        app:layout_constraintTop_toBottomOf="@id/txtv_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>