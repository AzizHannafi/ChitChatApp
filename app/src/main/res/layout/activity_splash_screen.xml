<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/el_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_signin_height"
        android:layout_margin="@dimen/el_margin"
        android:src="@drawable/img_spalsh_screen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/el_margin"
        android:text="@string/txt_stay_connected_to_the_world"
        android:textAlignment="center"
        android:textColor="@color/blue_signal"
        android:textSize="@dimen/txt_spalsh_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/el_margin"
        android:text="stay in touch with family and Friends"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>